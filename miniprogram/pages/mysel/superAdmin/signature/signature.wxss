/* pages/signature/signature.wxss */
page {
  background: #fbfbfb;
  height: auto;
  overflow: hidden;
}

.wrapper {
  width: 100%;
  height: 80vh;
  margin: 30rpx 0;
  overflow: hidden;
  display: flex;
  align-content: center;
  flex-direction: column;
  justify-content: center;
  font-size: 28rpx;
}

.handWriting {
  background: #fff;
  width: 100%;
  height: 100%;

}

.handRight {
  display: inline-flex;
  align-items: center;
}

.handCenter {
  border: 4rpx dashed #e9e9e9;
  flex: 6;
  overflow: hidden;
  box-sizing: border-box;
}

.handTitle {
  /* transform: rotate(90deg); */
  position: relative;
  margin-left: 45%;
  color: #666;
}

.handBtn button {
  font-size: 18rpx;
}

.handBtn {
  width:20rpx;
  height: 10rpx;
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: space-between;
  flex: 1;
}

