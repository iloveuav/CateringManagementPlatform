.top-encourage {
  margin: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.top-encourage-icon {
  height: 70rpx;
  width: 75rpx;
  background-color: rgb(35, 156, 195);
  border-radius: 35rpx;
  border: 1rpx solid rgb(218, 218, 218);

  display: flex;
  justify-content: center;
  align-items: center;
}

.top-encourage-text {
  margin-left: 20rpx;
  width: 600rpx;
  padding: 15rpx;
  background-color: #fff;
  border: 1rpx solid rgb(218, 218, 218);
  border-radius: 35rpx 35rpx 35rpx 0;
}